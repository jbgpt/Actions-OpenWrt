#root login
# 使用 openssl 生成 SHA-512 加密密码（替换以下命令输出到 shadow）
openssl passwd -6 -salt xyz root
# 示例输出：$6$xyz$d9X9tL7JZ8p6Q3w7Wq3bQ1q1KZ0bH7vJj6L8mWq1zYb3rN6sV5XvBn7qL3W4rJj7Qw
cat << EOF > files/etc/shadow
root:$6$xyz$d9X9tL7JZ8p6Q3w7Wq3bQ1q1KZ0bH7vJj6L8mWq1zYb3rN6sV5XvBn7qL3W4rJj7Qw:0:0:99999:7:::
daemon:*:0:0:99999:7:::
ftp:*:0:0:99999:7:::
network:*:0:0:99999:7:::
nobody:*:0:0:99999:7:::
EOF
